generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model DailyPuzzle {
  id        String               @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime             @default(now())
  date      String               @unique
  cards     String               @unique
  foundSet  DailyPuzzleHistory[]
}

model User {
  id                    String                @id @default(auto()) @map("_id") @db.ObjectId
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  username              String                @unique
  password              String
  dailyPuzzleHistories  DailyPuzzleHistory[]
  standardPuzzleHistory StandardPuzzleHistory
}

model DailyPuzzleHistory {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  puzzleDate String
  foundSets  String[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  puzzle     DailyPuzzle @relation(fields: [puzzleDate], references: [date], onDelete: Cascade)

  @@unique([userId, puzzleDate], name: "userId_puzzleDate")
}

type StandardPuzzleHistory {
  deck         CardData[]
  currentCards CardData[]
}

enum CardNumbers {
  One
  Two
  Three
}

enum CardShapes {
  Squiggle
  Oval
  Diamond
}

enum CardFills {
  Solid
  Empty
  Striped
}

enum CardColors {
  Red
  Green
  Blue
}

type CardData {
  number CardNumbers
  shape  CardShapes
  fill   CardFills
  color  CardColors
}
